{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "ignoreUnknown": false,
    "includes": [
      "packages/**/*.{ts,tsx}",
      "packages/config/**/*.{json,ts}",
      "packages/**/package.json",
      "apps/**/*.{ts,tsx}",
      "apps/**/package.json",
      ".vscode/*.json",
      "eslint.config.mts",
      "turbo.json",
      "biome.json"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "error",
        "noConsole": "off"
      },

      "correctness": {
        "noUnusedVariables": "warn"
      },

      "style": {
        "useConst": "warn",
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false,
            "conventions": [
              {
                "selector": { "kind": "interface" },
                "match": "I[A-Z].*",
                "formats": ["PascalCase"]
              },
              {
                "selector": { "kind": "class" },
                "formats": ["PascalCase"]
              },
              {
                "selector": { "kind": "classMethod" },
                "formats": ["camelCase"]
              },
              {
                "selector": { "kind": "classProperty" },
                "formats": ["camelCase"]
              },
              {
                "selector": { "kind": "variable" },
                "formats": ["camelCase", "CONSTANT_CASE", "snake_case"]
              },
              {
                "selector": { "kind": "function" },
                "formats": ["camelCase", "PascalCase", "snake_case"]
              }
            ]
          }
        }
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },

  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
